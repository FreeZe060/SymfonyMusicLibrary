{% extends 'index.html.twig' %}

{% block title %}Artists - Sonory{% endblock %}

{% block body %}
<div class="container mx-auto py-6">
    <h1 class="text-3xl font-bold text-white mb-6">Artists</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {% for artist in artists %}
            <div class="bg-gray-800 p-5 rounded-lg shadow-lg text-white">
                <h2 class="text-2xl font-semibold mb-2">{{ artist.name }}</h2>
                {# <p class="text-gray-400">{{ artist.bio|slice(0, 100) }}...</p> #}
                <a href="{{ path('artist_detail', {'id': artist.id}) }}" class="text-blue-500 hover:text-blue-300 mt-3 inline-block">See Details</a>
            </div>
        {% else %}
            <p class="text-gray-400">No artists available.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
